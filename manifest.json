{
  "name": "Obsidian Bookmarks",
  "version": "0.0.2",
  "description": "Save bookmarks to markdown files in Obsidian",
  "manifest_version": 2,

  "icons": {
    "24": "assets/images/icon24.png"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "obsidianbookmarks@rom100main"
    }
  },

  "permissions": ["storage", "activeTab"],

  "background": {
    "scripts": ["scripts/background.js"]
  },

  "browser_action": {
    "default_popup": "popup.html",
    "browser_style": true
  },

  "options_ui": {
    "page": "options.html",
    "browser_style": true
  }
}
